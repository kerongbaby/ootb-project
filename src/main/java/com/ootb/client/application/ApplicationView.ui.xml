<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>

	<ui:style>
		.blackTitle {
			background-color: #0F0F0F;
			width: 100%;
			height: 100%;
			vertical-align: middle;
		}

		.blackTitle .td {
			vertical-align: middle;
		}
		
		.welcome {
			color: #F0F0F0;
			width: 300px;
			height: 100%;
			font-size:24px;
			vertical-align: middle;
			padding: 0px;
			margin: 0px;
		}
		
		.mainSlot {
			background-color: #F0F0F0;
			width: 100%;
			height: 100%;
		}
	</ui:style>

	<g:DockLayoutPanel height="500px" width="100%">
		<g:north size="50">
			<g:HorizontalPanel styleName="{style.blackTitle}" ui:field="blackTitle">
				<g:HTMLPanel styleName="{style.welcome}">Welcome to
					Out-of-the-BOX</g:HTMLPanel>
				<g:Button ui:field="delivery" width="200px" height="100%">Delivery
				</g:Button>
				<g:Button ui:field="homeButton" width="200px" height="100%">Home
				</g:Button>
			</g:HorizontalPanel>
		</g:north>
		<g:center>
			<g:DockLayoutPanel ui:field="main" styleName="{style.mainSlot}"></g:DockLayoutPanel>
		</g:center>
	</g:DockLayoutPanel>
</ui:UiBinder>
